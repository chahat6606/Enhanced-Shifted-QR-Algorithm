# Generate test matrix

algorithms = {
    "QR": qr_algorithm,
    "Shifted QR": shifted_qr_algorithm,
    "Double Shift QR": double_shift_qr_algorithm,
    "Implicit Double Shift QR": implicit_double_shift_qr_algorithm,
